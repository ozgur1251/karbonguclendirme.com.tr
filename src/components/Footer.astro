---
import type { FooterColumn, FooterLink } from '../config/navigation';
import { NAVIGATION } from '../config/navigation';
import SocialIcons from './SocialIcons.astro';

const { columns, bottom } = NAVIGATION.footer;
const { contact } = NAVIGATION.topbar;
---

<footer class="bg-gray-900 text-gray-300 pt-16 pb-8">
  <div class="container mx-auto px-4">
    <!-- Üst Kısım -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-12">
      <!-- Logo ve İletişim -->
      <div class="lg:col-span-2">
        <img src="/images/logo-footer.svg" alt="Logo" class="h-12 mb-6" />
        <p class="text-gray-400 mb-6">
          Yapısal güçlendirme ve karbon fiber uygulamalarında uzman ekibimizle yanınızdayız.
        </p>
        <div class="space-y-3">
          <a href={`tel:${contact.phone}`} class="flex items-center text-gray-400 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {contact.phone}
          </a>
          <a href={`mailto:${contact.email}`} class="flex items-center text-gray-400 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {contact.email}
          </a>
          <div class="flex items-center text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {contact.address}
          </div>
        </div>
      </div>

      <!-- Menü Kolonları -->
      {columns.map((column: FooterColumn) => (
        <div>
          <h3 class="text-white font-semibold text-lg mb-4">{column.title}</h3>
          <ul class="space-y-3">
            {column.links.map((link: FooterLink) => (
              <li>
                <a href={link.path} class="text-gray-400 hover:text-white transition-colors">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Alt Kısım -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-gray-400 text-sm">
          {bottom.copyright}
        </div>
        <div class="flex items-center space-x-6">
          <SocialIcons class="text-gray-400" />
        </div>
        <div class="flex flex-wrap justify-center gap-4 text-sm">
          {bottom.links.map((link: FooterLink) => (
            <a href={link.path} class="text-gray-400 hover:text-white transition-colors">
              {link.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer> 