---
import { NAVIGATION } from '../config/navigation';
import SocialIcons from './SocialIcons.astro';

const { columns, bottom } = NAVIGATION.footer;
const { contact } = NAVIGATION.topbar;
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-8">
    <!-- Üst Kısım -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 mb-8">
      <!-- Logo ve İletişim -->
      <div class="md:col-span-3">
        <img src="/images/logo-footer.svg" alt="Logo" class="h-10 mb-4" />
        <p class="text-gray-400 mb-4 text-sm leading-relaxed">
          Yapısal güçlendirme ve karbon fiber uygulamalarında uzman ekibimizle yanınızdayız.
        </p>
        <div class="space-y-2">
          <a href={`tel:${contact.phone}`} class="flex items-center text-gray-400 hover:text-white transition-colors text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {contact.phone}
          </a>
          <a href={`mailto:${contact.email}`} class="flex items-center text-gray-400 hover:text-white transition-colors text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {contact.email}
          </a>
          <div class="flex items-center text-gray-400 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {contact.address}
          </div>
        </div>
      </div>

      <!-- Menü Sütunları -->
      <div class="md:col-span-9">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
          {columns.map(column => (
            <div>
              <h3 class="text-white text-base font-semibold mb-3">{column.title}</h3>
              <ul class="space-y-2">
                {column.links.map(link => (
                  <li>
                    <a href={link.path} class="text-gray-400 hover:text-white transition-colors text-sm">
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Alt Kısım -->
    <div class="border-t border-gray-800 pt-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div class="mb-3 md:mb-0">
          <p class="text-gray-400 text-xs">{bottom.copyright}</p>
        </div>
        <div class="flex flex-col md:flex-row md:items-center space-y-3 md:space-y-0 md:space-x-6">
          <div class="flex space-x-4">
            <SocialIcons class="text-gray-400" />
          </div>
          <div class="flex flex-wrap gap-3">
            {bottom.links.map(link => (
              <a href={link.path} class="text-gray-400 hover:text-white text-xs transition-colors">
                {link.name}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer> 