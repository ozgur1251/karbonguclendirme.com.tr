---
import Layout from '../layouts/Layout.astro';
import { CONTACT } from '../config/content';

// SEO için schema
const contactSchema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "İletişim - Karbon Güçlendirme",
  "description": "Arc Karbon ile iletişime geçin. Ücretsiz keşif ve ekspertiz için bize ulaşın.",
  "url": CONTACT.siteurl,
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": CONTACT.phone,
    "email": CONTACT.email,
    "contactType": "customer service",
    "areaServed": "TR",
    "availableLanguage": "Turkish"
  }
};
---

<Layout 
  title="İletişim - Arc Karbon" 
  description="Yapı güçlendirme çözümleri için bize ulaşın. Ücretsiz keşif ve danışmanlık hizmeti."
>
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(contactSchema)} />

  <!-- Hero Section -->
  <div class="bg-gray-50 border-b">
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">
          Bize Ulaşın
        </h1>
        <p class="text-xl text-gray-600">
          Projeniz için ücretsiz keşif ve danışmanlık hizmeti alın. Size en uygun çözümü sunalım.
        </p>
      </div>
    </div>
  </div>

  <!-- İletişim Bilgileri ve Form -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid lg:grid-cols-2 gap-16">
      <!-- Sol Taraf - İletişim Bilgileri -->
      <div class="space-y-8">
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">İletişim Bilgilerimiz</h2>
          <div class="space-y-6">
            <!-- Telefon -->
            <div class="flex items-center p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all">
              <div class="w-12 h-12 bg-green-50 rounded-xl flex items-center justify-center mr-6">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-500 mb-1">Telefon</div>
                <a href={`tel:${CONTACT.phone}`} class="text-lg font-medium text-gray-900 hover:text-green-600">
                  {CONTACT.phone}
                </a>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="flex items-center p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all">
              <div class="w-12 h-12 bg-green-50 rounded-xl flex items-center justify-center mr-6">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-500 mb-1">WhatsApp</div>
                <a href={`https://wa.me/${CONTACT.whatsapp}`} class="text-lg font-medium text-gray-900 hover:text-green-600">
                  Hemen Mesaj Gönderin
                </a>
              </div>
            </div>

            <!-- E-posta -->
            <div class="flex items-center p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all">
              <div class="w-12 h-12 bg-green-50 rounded-xl flex items-center justify-center mr-6">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-500 mb-1">E-posta</div>
                <a href={`mailto:${CONTACT.email}`} class="text-lg font-medium text-gray-900 hover:text-green-600">
                  {CONTACT.email}
                </a>
              </div>
            </div>

            <!-- Adres -->
            <div class="flex items-center p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all">
              <div class="w-12 h-12 bg-green-50 rounded-xl flex items-center justify-center mr-6">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-500 mb-1">Adres</div>
                <div class="text-lg font-medium text-gray-900">
                  {CONTACT.address}
                </div>
              </div>
            </div>

            <!-- Çalışma Saatleri -->
            <div class="flex items-center p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all">
              <div class="w-12 h-12 bg-green-50 rounded-xl flex items-center justify-center mr-6">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-500 mb-1">Çalışma Saatleri</div>
                <div class="text-lg font-medium text-gray-900">
                  {CONTACT.workingHours}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sağ Taraf - İletişim Formu -->
      <div class="bg-white p-8 rounded-2xl shadow-lg">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Ücretsiz Keşif İsteyin</h2>
        <form class="space-y-6" action="#" method="POST">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2" for="name">
                Adınız Soyadınız
              </label>
              <input
                type="text"
                name="name"
                id="name"
                required
                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                placeholder="Adınız Soyadınız"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2" for="phone">
                Telefon Numaranız
              </label>
              <input
                type="tel"
                name="phone"
                id="phone"
                required
                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                placeholder="0555 123 45 67"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2" for="email">
              E-posta Adresiniz
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
              placeholder="ornek@email.com"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2" for="service">
              İlgilendiğiniz Hizmet
            </label>
            <select
              name="service"
              id="service"
              required
              class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
            >
              <option value="">Hizmet Seçin</option>
              <option value="kolon">Kolon Güçlendirme</option>
              <option value="kiris">Kiriş Güçlendirme</option>
              <option value="doseme">Döşeme Güçlendirme</option>
              <option value="zemin">Zemin Güçlendirme</option>
              <option value="bina">Bina Güçlendirme</option>
              <option value="frp">FRP Güçlendirme</option>
              <option value="fiber">Fiber Güçlendirme</option>
              <option value="karbon">Karbon Güçlendirme</option>
              <option value="cfrp">Cfp Fiber Güçlendirme</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2" for="message">
              Mesajınız
            </label>
            <textarea
              name="message"
              id="message"
              rows="4"
              required
              class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
              placeholder="Projeniz hakkında bilgi verin..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-green-600 text-white font-medium px-8 py-4 rounded-xl hover:bg-green-700 transition-colors flex items-center justify-center space-x-2"
          >
            <span>Ücretsiz Keşif İste</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Harita -->
  <div class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Ofisimize Ulaşım</h2>
        <p class="text-gray-600">
          İstanbul'un merkezi konumunda, ulaşımı kolay ofisimizde sizleri ağırlamaktan mutluluk duyarız.
        </p>
      </div>
      <div class="aspect-w-16 aspect-h-9">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3010.2755835317997!2d28.985961315415682!3d41.03703702910046!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab7650656bd63%3A0x8ca058b28c20b6c3!2zVGFrc2ltLCDEsHN0YW5idWw!5e0!3m2!1str!2str!4v1645789998765!5m2!1str!2str"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          class="rounded-2xl shadow-lg"
        ></iframe>
      </div>
    </div>
  </div>
</Layout> 